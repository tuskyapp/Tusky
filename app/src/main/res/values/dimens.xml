<resources>
    <!-- ============================================================== -->
    <!-- Dimensions that are not specific to a layout type              -->
    <!-- ============================================================== -->

    <!-- The default gap between views in a layout. May be used as either
         margin or padding -->
    <dimen name="default_gap">8dp</dimen>

    <!-- ============================================================== -->
    <!-- Dimensions for laying out statuses                             -->
    <!-- ============================================================== -->

    <!-- The default margin between views used to lay out a status -->
    <dimen name="status_margin">@dimen/default_gap</dimen>

    <!-- marginStart for views in a status that are aligned horizontally-->
    <dimen name="status_marginStart">@dimen/status_margin</dimen>

    <!-- marginTop for views in a status that are aligned vertically -->
    <dimen name="status_marginTop">@dimen/status_margin</dimen>

    <!-- Alternative marginTop for views where the density should be lower,
         https://m3.material.io/foundations/layout/understanding-layout/spacing#da94f612-f274-49ab-aec5-f03dab53be8e -->
    <dimen name="status_marginTop_density_low">8dp</dimen>

    <dimen name="status_avatar_width">48dp</dimen>
    <dimen name="status_avatar_height">48dp</dimen>
    <dimen name="status_avatar_inset_width">24dp</dimen>
    <dimen name="status_avatar_inset_height">24dp</dimen>

    <!-- Padding between a drawable in a TextView and the text -->
    <dimen name="status_textview_drawablePadding">4dp</dimen>

    <!-- === Disclosure buttons === -->
    <!-- A disclosure button is one that shows more content (e.g., expanding a status
         that has a content warning, or where the status content is too long and has
         been collapsed) -->

    <!-- Minimum width for disclosure buttons in a status.  -->
    <dimen name="status_button_minWidth">150dp</dimen>

    <!-- Padding for disclosure buttons in a status -->
    <dimen name="status_button_paddingTop">4dp</dimen>
    <dimen name="status_button_paddingBottom">4dp</dimen>
    <dimen name="status_button_paddingStart">16dp</dimen>
    <dimen name="status_button_paddingEnd">16dp</dimen>

    <!-- === Cards for link previews === -->
    <dimen name="status_card_height">300dp</dimen>
    <dimen name="status_detailed_card_minHeight">300dp</dimen>

    <!-- The interior padding on the container that wraps the text below a
         link preview with the title, content, and link. Ensures that the
         text does not run in to the card's border -->
    <dimen name="status_detailed_card_info_padding">@dimen/default_gap</dimen>

    <!-- Visible dividing line between different parts of a status -->
    <dimen name="status_divider_height">1dp</dimen>

    <!-- === Action buttons === -->
    <!-- An action button allows the user to interact with the status (reblog,
         favourite, bookmark, etc) -->

    <dimen name="status_action_button_width">52dp</dimen>
    <dimen name="status_action_button_height">48dp</dimen>
    <dimen name="status_action_button_iconSize">28dp</dimen>
    <!-- In the detailed view the buttons have extra padding -->
    <dimen name="status_action_button_padding">4dp</dimen>

    <!-- TODO(nikclayton): Review this block and see how many of these can be deleted -->
    <dimen name="status_display_name_padding_end">4dp</dimen>
    <dimen name="status_reblogged_bar_padding_top">8dp</dimen>
    <dimen name="status_media_preview_margin_top">8dp</dimen>
    <dimen name="status_media_preview_height">100dp</dimen>
    <dimen name="status_detail_media_preview_height">130dp</dimen>
    <dimen name="compose_media_preview_margin">8dp</dimen>
    <dimen name="compose_media_preview_margin_bottom">0dp</dimen>
    <dimen name="compose_media_preview_size">120dp</dimen>
    <dimen name="account_avatar_margin">14dp</dimen>
    <dimen name="tab_page_margin">16dp</dimen>
    <dimen name="status_line_margin_start">38dp</dimen>
    <dimen name="text_content_margin">16dp</dimen>
    <dimen name="status_sensitive_media_button_padding">5dp</dimen>

    <dimen name="card_image_vertical_height">210dp</dimen>
    <dimen name="card_image_horizontal_width">100dp</dimen>

    <dimen name="compose_activity_snackbar_elevation">16dp</dimen>

    <dimen name="account_activity_scroll_title_visible_height">200dp</dimen>
    <dimen name="account_activity_avatar_size">100dp</dimen>

    <dimen name="compose_activity_scrollview_height">-1px</dimen> <!-- match_parent -->
    <dimen name="timeline_width">-1px</dimen> <!-- match_parent -->

    <dimen name="actionbar_elevation">4dp</dimen>

    <item name="wrap_content" format="integer" type="dimen">-2</item>

    <dimen name="preference_icon_size">20dp</dimen>

    <dimen name="selected_drag_item_elevation">12dp</dimen>

    <dimen name="avatar_radius_94dp">11.75dp</dimen> <!-- 1/8 of 100dp - 2 * 3dp padding -->
    <dimen name="avatar_radius_80dp">10dp</dimen> <!-- 1/8 of 80dp -->
    <dimen name="avatar_radius_48dp">6dp</dimen> <!-- 1/8 of 48dp -->
    <dimen name="avatar_radius_42dp">5.25dp</dimen> <!-- 1/8 of 42dp -->
    <dimen name="avatar_radius_36dp">4.5dp</dimen> <!-- 1/8 of 36dp -->
    <dimen name="avatar_radius_24dp">3dp</dimen> <!-- 1/8 of 24dp -->
    <dimen name="min_report_button_width">160dp</dimen>
